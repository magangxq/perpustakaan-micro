// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users{
  uuid String @id @default(uuid())
  name String
  email String @unique
  password String
  nik_nis Int @unique
  registration_status String @default("waiting-verification")
  role String @default("Member")
  createdAt DateTime
  updatedAt DateTime
}

model book{
  id Int @id @default(autoincrement())
  title String
  author String
  publisher String
  publication_year DateTime @db.Date
  description String
  book_status String @default("Available")
  information String?
  createdAt DateTime
  updatedAt DateTime
}
model borrow{
  borrow_id Int @id @default(autoincrement())
  code String
  borrowing_status String
  borrow_date DateTime @db.Date
  due_date DateTime @db.Date
  returned_date DateTime @db.Date

}